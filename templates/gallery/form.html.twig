{% extends 'base.html.twig' %}

{% block title %}Book{% endblock %}

{% block body %}
    <div class="container">
        <h2>Book</h2>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            {{ form_start(form) }}
            <div class="form-group">
                <label for="textarea">{{ form_label(form.name) }}</label>
                {{ form_widget(form.name) }}
            </div>
            <div class="form-group">
                <label for="textarea">{{ form_label(form.author) }}</label>
                {{ form_widget(form.author) }}
            </div>
            <div class="form-group">
                <label for="textarea">{{ form_label(form.year) }}</label>
                {{ form_widget(form.year) }}
            </div>
            <button type="submit">Save</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
